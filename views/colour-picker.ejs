<link href="/styles/colour-picker.css" rel="stylesheet">

<div id="colour-picker">
  <div class="colour-picker--wrapper section-padding color-scheme-03 transparent">
    <div class="colour-picker--container page-width">
      <div class="sidebar">
        <div class="mode-container">
          <h2>Mode</h2>
          <div class="buttons-wrapper">
            <button id="hsl-button" class="mode-button selected">HSL</button>
            <button id="rgb-button" class="mode-button">RGB</button>
            <button id="cmyk-button" class="mode-button">CMYK</button>
          </div>
          <button id="log" class="mode-button hidden">Log values</button>
        </div>
        <div class="output-wrapper">
          <div class="output--container">
            <div class="output-top">
              <h5>HEX</h5>
              <button class="copy">COPY</button>
            </div>
            <span id="hex-output" class="output h5">#00ff00</span>
          </div>
    
          <div class="output--container">
            <div class="output-top">
              <h5>HSL</h5>
              <button class="copy">COPY</button>
            </div>
            <span id="hsl-output" class="output h5">hsl(120, 100%, 50%)</span>
          </div>
    
          <div class="output--container">
            <div class="output-top">
              <h5>RGB</h5>
              <button class="copy">COPY</button>
            </div>
            <span id="rgb-output" class="output h5">rgb(0, 255, 0)</span>
          </div>
    
          <div class="output--container">
            <div class="output-top">
              <h5>CMYK</h5>
              <button class="copy">COPY</button>
            </div>
            <span id="cmyk-output" class="output h5">cmyk(100%, 0%, 100%, 0%)</span>
          </div>
        </div>
      </div>

      <div class="main-area">
        <div class="palette-wrapper">
          <h5 class="palette-title">Palette 1</h5>
          <div class="palette-container"></div>
          <div class="palette-controls--wrapper">
            <div class="palette-controls--container">
              <button id="previous-palette" class="palette-controls"><</button>
              <button id="delete-palette" class="palette-controls">-</button>
              <button id="new-palette" class="palette-controls">+</button>
              <button id="next-palette" class="palette-controls">></button>
            </div>
          </div>
        </div>
        <div class="knobs-container">
          <div class="knob-wrapper">
            <p id="knob1-text" class="pill h5">Hue</p>
            <div class="knob-background">
              <div class="slider">
                <div id="knob1" class="knob h5"></div>
              </div>
            </div>
            <p id="knob1-value" class="pill h5">120</p>
          </div>
          <div class="knob-wrapper">
            <p id="knob2-text" class="pill h5">Saturation</p>
            <div class="knob-background">
              <div class="slider">
                <div id="knob2" class="knob"></div>
              </div>
            </div>
            <p id="knob2-value" class="pill h5">100%</p>
          </div>
          <div class="knob-wrapper">
            <p id="knob3-text" class="pill h5">Lightness</p>
            <div class="knob-background">
              <div class="slider">
                <div id="knob3" class="knob"></div>
              </div>
            </div>
            <p id="knob3-value" class="pill h5">50%</p>
          </div>
          <div id="knob-four" class="knob-wrapper hidden">
            <p id="knob4-text" class="pill h5">Black</p>
            <div class="knob-background">
              <div class="slider">
                <div id="knob4" class="knob"></div>
              </div>
            </div>
            <p id="knob4-value" class="pill h5">0%</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/scripts/colour-picker.js"></script>