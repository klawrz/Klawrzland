<link href="/styles/colour-synth.css" rel="stylesheet">

<div id="colourSynth">
  <div class="colourSynth--wrapper section-padding color-scheme-04 transparent">
    <div id="synth" class="colourSynth--container page-width color-scheme-04 border-radius-3 prevent-select">

      <!-- Top half -->
      <div class="grid--upper">

        <!-- HSL -->
        <div id="hsl-wrapper">
          <div class="knobs-wrapper">
            <div id="hue-container" class="knob-container">
              <div id="hue-knob" class="knob"></div>
              <div id="hue-display" class="display">
                <h5 class="knob-type">HUE</h5>
                <h5 class="knob-value hidden">
                  <span>0</span>
                </h5>
              </div>
            </div>
            <div id="saturation-container" class="knob-container">
              <div id="saturation-knob" class="knob"></div>
              <div id="saturation-display" class="display">
                <h5 class="knob-type">SAT</h5>
                <h5 class="knob-value hidden">
                  <span>0</span><span>%</span>
                </h5>
              </div>
            </div>
            <div id="lightness-container" class="knob-container">
              <div id="lightness-knob" class="knob"></div>
              <div id="lightness-display" class="display">
                <h5 class="knob-type">LIG</h5>
                <h5 class="knob-value hidden">
                  <span>0</span><span>%</span>
                </h5>
              </div>
            </div>
          </div>
          <div class="section-heading">
            <h2>HSL</h2>
          </div>
        </div>

        <!-- RGB -->
        <div id="rgb-wrapper">
          <div class="knobs-wrapper">
            <div id="red-container" class="knob-container">
              <div id="red-knob" class="knob"></div>
              <div id="red-display" class="display">
                <h5 class="knob-type">RED</h5>
                <h5 class="knob-value hidden">
                  <span>0</span>
                </h5>
              </div>
            </div>
            <div id="green-container" class="knob-container">
              <div id="green-knob" class="knob"></div>
              <div id="green-display" class="display">
                <h5 class="knob-type">GRN</h5>
                <h5 class="knob-value hidden">
                  <span>0</span>
                </h5>
              </div>
            </div>
            <div id="blue-container" class="knob-container">
              <div id="blue-knob" class="knob"></div>
              <div id="blue-display" class="display">
                <h5 class="knob-type">BLU</h5>
                <h5 class="knob-value hidden">
                  <span>0</span>
                </h5>
              </div>
            </div>
          </div>
          <div class="section-heading">
            <h2>RGB</h2>
          </div>
        </div>

        <!-- CMYK -->
        <div id="cmyk-wrapper">
          <div class="knobs-wrapper">
            <div id="cyan-container" class="knob-container">
              <div id="cyan-knob" class="knob"></div>
              <div id="cyan-display" class="display">
                <h5 class="knob-type">CYN</h5>
                <h5 class="knob-value hidden">
                  <span>0</span><span>%</span>
                </h5>
              </div>
            </div>
            <div id="magenta-container" class="knob-container">
              <div id="magenta-knob" class="knob"></div>
              <div id="magenta-display" class="display">
                <h5 class="knob-type">MAG</h5>
                <h5 class="knob-value hidden">
                  <span>0</span><span>%</span>
                </h5>
              </div>
            </div>
            <div id="yellow-container" class="knob-container">
              <div id="yellow-knob" class="knob"></div>
              <div id="yellow-display" class="display">
                <h5 class="knob-type">YEL</h5>
                <h5 class="knob-value hidden">
                  <span>0</span><span>%</span>
                </h5>
              </div>
            </div>
            <div id="black-container" class="knob-container">
              <div id="black-knob" class="knob"></div>
              <div id="black-display" class="display">
                <h5 class="knob-type">BLK</h5>
                <h5 class="knob-value hidden">
                  <span>0</span><span>%</span>
                </h5>
              </div>
            </div>
          </div>
          <div class="section-heading">
            <h2>CMYK</h2>
          </div>
        </div>

      </div>

      <!-- Bottom half -->
      <div class="grid--lower">

        <!-- Outputs -->
        <div class="output-wrapper">

          <!-- Hex -->
          <div class="output-container">
            <div class="lcd lcd-display">
              <div class="lcd-top">
                <span id="output-type">HEX</span>
                <span class="lcd-button">COPY</span>
              </div>
              <span id="output" class="output h5">#000000</span>
            </div>
          </div>

          <div class="mode-buttons">
            <button id="hex-button" class="mode-button active">Hex</button>
            <button id="hsl-button" class="mode-button">HSL</button>
            <button id="rgb-button" class="mode-button">RGB</button>
            <button id="cmyk-button" class="mode-button">CMYK</button>
          </div>
    
          <!-- HSL -->
          <div class="output-container hidden">
            <div class="output-top">
              <h5>HSL</h5>
              <button class="copy">COPY</button>
            </div>
            <span id="hsl-output" class="output h5">hsl(120, 100%, 50%)</span>
          </div>
    
          <!-- RGB -->
          <div class="output-container hidden">
            <div class="output-top">
              <h5>RGB</h5>
              <button class="copy">COPY</button>
            </div>
            <span id="rgb-output" class="output h5">rgb(0, 255, 0)</span>
          </div>
    
          <!-- CMYK -->
          <div class="output-container hidden">
            <div class="output-top">
              <h5>CMYK</h5>
              <button class="copy">COPY</button>
            </div>
            <span id="cmyk-output" class="output h5">cmyk(100%, 0%, 100%, 0%)</span>
          </div>

        </div>

        <!-- Palettes -->
        <div class="palette-wrapper">
          <div class="palette-container lcd lcd-display">
            <div class="palette-controls--wrapper">
              <div class="palette-title">Palette 1</div>
              <div class="palette-controls--container">
                <div id="previous-palette" class="palette-controls lcd-button"><</div>
                <div id="next-palette" class="palette-controls lcd-button">></div>
                <div id="new-palette" class="palette-controls lcd-button">+</div>
                <div id="delete-palette" class="palette-controls lcd-button">-</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Colour field -->
        <div id="colorField" class="color-field"></div>
      </div>
    </div>
  </div>
</div>

<script src="/scripts/colour-synth.js"></script>